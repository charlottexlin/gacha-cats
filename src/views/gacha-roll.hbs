<div class="container-fluid text-center">
    {{#if errorMsg}}
        <div class="alert alert-danger">
            {{ errorMsg }}
        </div>
    {{/if}}
    <img src={{rolledCat.image}} alt="You rolled {{rolledCat.defaultName}}!" class="img-fluid">
    <div>
        <p class="h2 text-primary">{{rolledCat.defaultName}}</p>
        <p class="h3 text-secondary">{{rolledCat.subtitle}}</p>
        <p class="h4"><strong>{{rolledCat.rarity}}</strong></p>
        <p class="h4">Max HP: {{rolledCat.maxHP}}</p>
        <p class="h4">Power level: {{rolledCat.powerLevel}}</p>
    </div>
    {{#if haveCat}}
        <p class="h4">You already have this cat - converted to 5 coins instead</p>
        <a href="/gacha" class="btn btn-primary">Back to gacha</a>
    {{else}}
        <form method="POST" action="/gacha/roll" id="renameCatForm">
            <label for="name" class="form-label">Rename your cat!</label>
            <input type="text" name="name" value="{{rolledCat.defaultName}}" class="form-control">
            <input type="submit" value="Submit" class="btn btn-secondary">
        </form>
    {{/if}}
</div>
<script src="/javascripts/gacha-roll.js"></script>