<h2>Battle set up</h2>
<div id="currentOpponentInfo">
	<h3>The current opponent is...</h3>
	<h3 id="opponentName">{{opponent.fighterProfile.defaultName}}</h3>
</div>
{{#if noCats}}
<h2>You don't have any cats to battle with yet. Roll on the gacha to get new cats!</h2>
{{else}}
{{#if errorMsg}}
<div class="error">
	{{ errorMsg }}
</div>
{{/if}}
<form method="POST" action="battle">
	<div>
		<label for="chosenCat">Choose your fighter:</label>
        <select name="chosenCat">
            {{#each cats as |cat|}}
                <option value="{{cat.name}}">{{cat.name}}</option>
            {{/each}}
        </select>
	</div>
	<div>
		<input type="submit" value="Begin battle">
	</div>
</form>
{{/if}}